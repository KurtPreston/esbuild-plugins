{
  "name": "esbd",
  "version": "1.0.0",
  "author": "John Gozde <john@gozde.ca>",
  "description": "CLI wrapper for esbuild in dev and prod",
  "license": "MIT",
  "homepage": "https://github.com/jgoz/esbuild-plugins#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgoz/esbuild-plugins.git",
    "directory": "packages/esb"
  },
  "bugs": {
    "url": "https://github.com/jgoz/esbuild-plugins/issues"
  },
  "keywords": [
    "esbuild",
    "esbuild-cli"
  ],
  "main": "dist/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@jgoz/esbuild-plugin-livereload": "workspace:*",
    "@jgoz/esbuild-plugin-typecheck": "workspace:*"
  },
  "peerDependencies": {
    "esbuild": ">= 0.13.0",
    "@swc/core": ">= 1.2.111"
  },
  "peerDependenciesMeta": {
    "@swc/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "rc",
    "@swc/core": "^1.2.112",
    "@types/mkdirp": "^1.0.2",
    "@types/pretty-time": "^1.1.1",
    "@types/sade": "^1.7.3",
    "@types/serve-static": "^1.13.10",
    "@types/wait-on": "^5.3.1",
    "chokidar": "^3.5.2",
    "esbuild": "^0.13.15",
    "esbuild-node-externals": "^1.4.0",
    "execa": "^5.0.0",
    "get-port": "^5.0.0",
    "io-spin": "^0.4.1",
    "jest": "^27.3.1",
    "kleur": "^4.1.4",
    "memfs": "^3.3.0",
    "mkdirp": "^1.0.4",
    "node-graceful": "^3.1.0",
    "parse5": "^6.0.1",
    "playwright": "rc",
    "prettier": "^2.4.1",
    "pretty-bytes": "^5.6.0",
    "pretty-time": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sade": "^1.7.4",
    "serve-static": "^1.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "wait-on": "^6.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/config/serializer.ts"
    ],
    "testTimeout": 10000,
    "maxWorkers": 1,
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    }
  },
  "scripts": {
    "prepack": "./bundle.js build",
    "test": "jest && playwright test",
    "watch": "./bundle.js build -w"
  }
}
